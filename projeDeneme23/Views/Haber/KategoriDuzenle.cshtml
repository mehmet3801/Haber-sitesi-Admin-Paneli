@model projeDeneme23.Models.Kategori

@{
    ViewBag.Title = "Kategori Düzenle";
}

<h2>Kategori Düzenle</h2>

<form method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="Ad">Kategori Adı:</label>
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("KategoriEkle", "Haber")" class="btn btn-secondary">İptal</a>
</form>
